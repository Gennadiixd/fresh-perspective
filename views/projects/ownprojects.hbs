<div class="container row">
  {{#if_eq bool 'false'}}
  <h1>Projects to be moderated</h1>
  {{/if_eq}}

  {{#if_eq bool 'true'}}
  <h1>Accepted projects</h1>
  {{/if_eq}}



  {{#each projects}}
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img class="w-25" src='/images/{{this.images}}'>
        <div class="caption">
          <h3>{{this.title}}</h3>
          <p>{{this.description}}</p>
          <p><a href="../{{this._id}}" class="btn btn-primary" role="button">Перейти</a></p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}