<div class="row">
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img class="w-100" src='/images/{{project.images}}'>
            <div class="caption">
                <h3>{{project.title}}</h3>
                <p>{{project.description}}</p>
                <p>Автор: {{project.author}}</p>
                <p><a href="/projects" class="btn btn-primary" role="button">Назад</a>
                    {{#if_eq session.user.role 'moderator'}}
                    {{#if_eq project.modStat 'pending'}}
                    <form action="/projects/accept/{{project._id}}" method="post">
                        <input type="hidden" name="_method" value="put">
                        <input type="submit" class="btn btn-default" value="Одобрить">
                    </form>
                    <form action="/projects/reject/{{project._id}}" method="post">
                        <input type="hidden" name="_method" value="put">
                        <input type="submit" class="btn btn-default" value="Отклонить">
                    </form>
                    {{/if_eq}}
                    {{/if_eq}}


                    {{#if_not session.user.role 'customer'}}
                    <form action="/projects/{{project._id}}" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <input type="submit" class="btn btn-default" value="Удалить">
                    </form>
                    {{/if_not}}
                </p>
            </div>
        </div>
    </div>
</div>